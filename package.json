    "url": "https://github.com/AranBeitia/my-poc/issues"
  },
  "homepage": "https://github.com/AranBeitia/my-poc#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.3",
    "concat": "^1.0.3",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1"
  },
  "dependencies": {
    "live-server": "^1.2.1",
    "scrollnav": "^3.0.2"
  }
